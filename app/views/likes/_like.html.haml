%div.link
  -if user_signed_in?
    - if current_user.likes.find_by(review_id: review.id)
      = link_to create_reviews_path(@review.id), method: :delete, remote: true do
        .heart-icon
          %i{class: "fa fa-heart"}
          %span いいね！
          %span
            = review.likes.count.to_s
        
    - else
      = link_to destroy_review_path(@review.id), method: :post, remote: true do
        .heart-icon
          %i{class: "fa fa-heart"}
          %span いいね！
          %span
            = review.likes.count.to_s 
  - else
    .heart-icon
      %i{class: "fa fa-heart"}
      %span いいね！
      %span
        = item.likes.count.to_s