.main-login
  .main-login__title
    Starbucks　Review
  .main-login__box
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .main-login__box__title
        新規会員登録
      .field
        = f.label :必須, class:"lable"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email",class: "main-login__box__form__contanir",placeholder: "メールアドレス"
      .field
        = f.label :必須, class:"lable"
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "new-password",class: "main-login__box__form__contanir",placeholder: "パスワード"
      .field
        = f.label :必須, class:"lable"
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password",class: "main-login__box__form__contanir",placeholder: "パスワード確認",class: "main-login__box__form__contanir"
      .actions
        = f.submit "新規登録",class: 'btn-submit'
    
